<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cxmax.graduationproject">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.calendar.activity.CalendarActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>

        <receiver android:name=".model.broadcast.AlarmReceiver">
            <intent-filter>
                <action android:name="action_alarm_manager" />
            </intent-filter>
        </receiver>
    </application>

</manifest>